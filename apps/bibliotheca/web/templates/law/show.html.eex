<div class="text-center">
  <div class="lawname"> 
    <strong>
      <%= @law.name %>
    </strong>
  </div>
  <br>
  <div class="lawcontent">
    <%= for section <- @contents_table do %>
      <div class="sections">
        <p>
          <%= Enum.at(section, 0) |> style_section |> raw %>
        </p>
      </div>
      <%= for ct_article <- Enum.at(section, 1) do %>
        <div class="articleslist">
          <p>
            <a href="#<%= ct_article.article_number %>">
              [ART√çCULO <%= ct_article.article_number %>]
            </a>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="lawhead"> 
    <p>
      <pre>
        <%= @law.header %>
      </pre>
    </p>
  </div>
  <br>

  <%= for article <- @articles do %>

  <div class="numarticulo" id="<%= article.article_number %>">
    <em>
      <strong>
        <%= article.article_number %>
      </strong>
    </em>
  </div>
  <div class="textoarticulo">
    <pre>
      <%= article.article_body %>
    </pre>
  </div>
  <br>
  <br>
  <% end %>
</div>

